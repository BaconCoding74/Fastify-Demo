{
    "compilerOptions": {
        "target": "ESNext", // Version of scripting language standard
        "module": "NodeNext", // Module system of TS compiler
        "moduleResolution": "NodeNext", // Algorithm in resolving imported module files
        "strict": true, // Strictly guarantee the correctness of code based on the standard
        "esModuleInterop": true, // Enable compatibility of import between ES and CommonJS modules
        "skipLibCheck": true, // Skip type checking of declaration files 
        "outDir": "dist", // Output of built file
        "rootDir": "src", // Root file
        "types": ["node"],
        "typeRoots": ["./src/types", "./node_modules/@types"] // Root of type files
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}